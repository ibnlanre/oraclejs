{
  "name": "oraclejs",
  "version": "0.1.0",
  "description": "Use node packages in the browser without compilation",
  "main": "index.js",
  "types": "types/index.d.ts",
  "files": [
    "public/index.js",
    "public/browser.js",
    "public/types"
  ],
  "scripts": {
    "type": "tsc --project tsconfig.json --emitDeclarationOnly true --declaration --declarationDir ./public/types",
    "push": "npm login && npm publish --access public",
    "build": "rollup -c",
    "test:oraclejs": "node tests/node_test",
    "test:conversion": "node tests/conversion_test"
  },
  "keywords": [
    "npm",
    "yarn",
    "browser",
    "browserify",
    "modules",
    "require",
    "import",
    "babel"
  ],
  "author": "Ridwan Olanrewaju <olaitanlanre28@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ibnlanre/oraclejs/issues"
  },
  "homepage": "https://github.com/ibnlanre/oraclejs#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@wessberg/rollup-plugin-ts": "^1.3.14",
    "rollup": "^2.38.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "browser-env": "^3.3.0",
    "cross-fetch": "^3.0.6"
  }
}